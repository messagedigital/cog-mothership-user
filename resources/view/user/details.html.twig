{% extends 'Message:Mothership:ControlPanel::_templates/cp' %}

{% block stylesheets %}
	{{ parent() }}
	{% stylesheets
		'@Message:Mothership:User::resources/assets/css/user.css'

		output='/assets/css/ms_user.css'
		filter='csscogulerewrite,?cssmin'
	%}
		<link rel="stylesheet" href="{{ asset_url }}">
	{% endstylesheets %}
{% endblock %}

{% block main %}
	{{ form_start(impersonateForm) }}
	<hgroup class="title">
		<h1>{{ user.name }} {% if groups %}<span class="flag role">{{ groups }}</span>{% endif %} <span>User #{{ userID }}</span></h1>
	</hgroup>
	<div class="topbar">
		{{ render(controller('Message:Mothership:User::Controller:User:Tabs#tabs', {'userID': userID}))}}
		<div class="controls">
			<button class="button small preview impersonate">Log in as this user</button>
			<div class="skip-payment">
				{{ form_rest(impersonateForm) }}
			</div>
		</div>
	</div>
	{{ form_end(impersonateForm) }}
	<div class="container-content">
		{{ form_start(accountdetails) }}
			{{ form_rest(accountdetails) }}
			<button type="submit" class="button small save" id="save-content">Save changes</button>
		{{ form_end(accountdetails) }}
	</div>
{% endblock %}