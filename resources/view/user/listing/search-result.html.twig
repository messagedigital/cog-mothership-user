{% extends 'Message:Mothership:ControlPanel::_templates/cp' %}

{% block main %}
	<hgroup class="title">
		<h1>Users</h1>
		<div class="controls">
			<div class="search">
				{{ render(controller('Message:Mothership:User::Controller:User:listing#searchForm')) }}
			</div>
			<a href="{{ url('ms.cp.user.admin.create')}}" class="button small create" data-live>Add a new user</a>
		</div>
	</hgroup>
	<div class="container-content">
		<table>
			<thead>
				<tr>
					<th>ID</th>
					<th>User</th>
					<th>Email</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td><a href="{{ url('ms.cp.user.admin.detail.edit', { userID: user.id }) }}">{{ user.id }}</a></td>
						<td>{{ user.name }}</td>
						<td>{{ user.email }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}